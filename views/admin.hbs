<!DOCTYPE html>
<html lang="en">

<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/admin.css">
</head>

<body>
  <div class="row content">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/admin">Administrator</a>
        </div>
        <form class="navbar-form navbar-right">
          <button type="button" class="btn btn-primary btn-sm" id="add">Add Items</button>
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </nav>
    <div class="col-sm-2 sidenav">
      <ul class="container-fluid text-left">
        <li>
          <h4><a href="/home">Home</a></h4>
        </li>
        <li>
          <h4 data-toggle="collapse" data-target="#income">Income</h4>
          <div class="collapse" id="income">
            <a class="dropdown-item" href="/income" target="display">Income</a>
            <a class="dropdown-item" href="/balance" target="display">Income Balance</a>
            <a class="dropdown-item" href="/preview" target="display">Income Preview</a>
          </div>
        </li>

        <li>
          <h4 data-toggle="collapse" data-target="#outcome">Outcome</h4>
          <div class="collapse" id="outcome">
            <a class="dropdown-item" href="/out" target="display">Outcome</a>
            <a class="dropdown-item" href="/farm12" target="display"> Farm 12</a>
            <a class="dropdown-item" href="/farm13" target="display"> Farm 13</a>
            <a class="dropdown-item" href="/farm14" target="display"> Farm 14</a>
            <a class="dropdown-item" href="/farm15" target="display"> Farm 15</a>
            <a class="dropdown-item" href="/farm16" target="display"> Farm 16</a>
            <a class="dropdown-item" href="/farm17" target="display"> Farm 17</a>
            <a class="dropdown-item" href="/farm18" target="display"> Farm 18</a>
            <a class="dropdown-item" href="/farm19" target="display"> Farm 19</a>
            <a class="dropdown-item" href="/farmabdallah" target="display">Abdallah Farm</a>
            <a class="dropdown-item" href="/farmfesal" target="display">Fesal Farm</a>
          </div>
        </li>
      </ul>
    </div>
    {{!-- this is the display section of admin page --}}
    <div class="col-sm-8 text-left">
      <iframe id="display" src="/income" frameborder="0" name="display">
      </iframe>
    </div>
  </div>
  <script>
    //start of Add item button
    document.getElementById("add").addEventListener("click", () => {
      let iframe = document.getElementById("display").src = "/addincome"
    });
  </script>

</body>

</html>