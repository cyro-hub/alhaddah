                            <li><a href="/farm12" target="display" id="Farm12">Farm 12</a></li>
                            <li><a href="/farm13" target="display" id="Farm13">Farm 13</a></li>
                            <li><a href="/farm14" target="display" id="Farm14">Farm 14</a></li>
                            <li><a href="/farm15" target="display" id="Farm15">Farm 15</a></li>
                            <li><a href="/farm16" target="display" id="Farm16">Farm 16</a></li>
                            <li><a href="/farm17" target="display" id="Farm17">Farm 17</a></li>
                            <li><a href="/farm18" target="display" id="Farm18">Farm 18</a></li>
                            <li><a href="/farm19" target="display" id="Farm19">Farm 19</a></li>
                            <li><a href="/farmabdallah" target="display" id="AbdallahFarm">Abdallah</a></li>
                            <li><a href="/farmfesal" target="display" id="FesalFarm">Fesal</a></li>
                        </ul>
                    </li>
                    <li><a href="" data-toggle="modal" data-target="#timeFrame">Set Time frame</a></li>
                </ul>
            </nav>
            <!-- .nav-menu -->
        </div>
    </header>
    <div class="modal" tabindex="-1" id="timeFrame">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <form action="">
                        <div class="form-group">
                            <label for="date">FROM</label>
                            <input type="date" class="form-control" id="fromDate" />
                        </div>
                        <div class="form-group">
                            <label for="date">TO</label>
                            <input type="date" class="form-control" id="toDate" />
                        </div>
                        <button type="submit" class="btn btn-primary" data-dismiss="modal"
                            aria-label="Close">ok</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <iframe src="/notify" frameborder="0" name="display" id="display"></iframe>
    <script src="js/outcome.js"></script>
</body>

</html>