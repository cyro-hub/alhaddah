<body>
    {{!-- outcome modal --}}
    <div class="modal" tabindex="-1" id="outcome">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Outcome</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/api/incomeoutcome" method="POST">
                        <div class="form-group">
                            <label for="item">ITEM</label>
                            <select class="form-control" id="item" name="item" required>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="amount">AMOUNT</label>
                            <input type="number" min="0" step="0.01" class="form-control" id="amount" name="amount"
                                required />
                        </div>
                        <div class="form-group">
                            <label for="date">DATE</label>
                            <input type="date" class="form-control" id="date" name="date" required />
                        </div>
                        <div class="form-group"
                            title="Select multiple farms by holding the Ctrl button and clicking the farm">
                            <label for="farm">FARM'S</label>
                            <select multiple class="form-control" id="farm" name="farm" required>
                                <option>Farm12</option>
                                <option>Farm13</option>
                                <option>Farm14</option>
                                <option>Farm15</option>
                                <option>Farm16</option>
                                <option>Farm17</option>
                                <option>Farm18</option>
                                <option>Farm19</option>
                                <option>AbdallahFarm</option>
                                <option>FesalFarm</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="uses">Use of the item(E.g Insecticide,fungicide)</label>
                            <textarea id="uses" rows="2" name="uses" class="form-control" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{!-- end of outcome modal --}}
    {{!-- income modal --}}
    <div class="modal" tabindex="-1" id="income">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Income</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/api/incomebalance" method="POST">
                        <div class="form-group">
                            <label for="item">ITEM NAME</label>
                            <input type="text" class="form-control" id="item" name="item" required />
                        </div>
                        <div class="form-group">
                            <label for="unit">UNIT</label>
                            <input type="text" class="form-control" id="unit" name="unit" required />
                        </div>
                        <div class="form-group">
                            <label for="price">PRICE</label>
                            <input type="number" min="0" step="0.01" class="form-control" id="price" name="price"
                                required />
                        </div>
                        <div class="form-group">
                            <label for="type">TYPE</label>
                            <select class="form-control" id="type" name="type" required>
                                <option>Fertilizer</option>
                                <option>Medicine</option>
                                <option>Others</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="company">COMPANY</label>
                            <input type="text" class="form-control" id="company" name="company" required />
                        </div>
                        <div class="form-group">
                            <label for="description">Description About the item(E.g Chemical conposition)</label>
                            <textarea class="form-control" id="description" rows="3" name="description"
                                required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{!-- end of income modal --}}
    {{!-- add item modal --}}
    <div class="modal" tabindex="-1" id="addItem">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/api/incomeaddincome" method="POST">
                        <div class="form-group">
                            <label for="date">DATE</label>
                            <input type="date" class="form-control" id="date" name="date" required />
                        </div>
                        <div class="form-group">
                            <label for="type">ITEM</label>
                            <select class="form-control" id="add" name="item" required>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="amount">AMOUNT</label>
                            <input type="number" min="0" step="0.01" class="form-control" id="amount" name="amount"
                                required />
                        </div>
                        <div class="form-group">
                            <label for="free">FREE</label>
                            <input type="number" min="0" step="0.01" class="form-control" id="free" name="free"
                                required />
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{!-- end of add item modal --}}
    {{!-- success modal --}}
    {{#if success}}
    <div class="modal" tabindex="-1" id="Success">
        <div class="modal-dialog">
            <div class="modal-content">
                <i class="fa fa-check" id="success"></i>
                <div class="modal-body">
                    <p>{{success}}</p>
                    <p>Click anywhere to close</p>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" data-target="#Success" id="open"></a>
    {{/if}}
    {{#if warning}}
    <div class="modal" tabindex="-1" id="Warning">
        <div class="modal-dialog">
            <div class="modal-content">
                <i class="fa fa-exclamation" id="warning"></i>
                <div class="modal-body">
                    <p>{{warning}}</p>
                    <p>Click anywhere to close</p>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" data-target="#Warning" id="open"></a>
    {{/if}}
    {{!-- end of success modal --}}
