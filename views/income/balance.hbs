<body class="p-3 mb-2">
    {{!-- check for certainty --}}
    <div class="modal" tabindex="-1" id="delete">
        <div class="modal-dialog">
            <div class="modal-content">
                <i class="fa fa-question text-danger" id="icon"></i>
                <div class="modal-body">
                    <p id="deleteMessage"></p>
                </div>
                <div class="footer">
                    <button id="yes" class="btn btn-primary">Yes</button>
                    <button id="no" class="btn btn-danger">No</button>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" data-target="#delete" id="openDelete"></a>
    {{!-- end of verification --}}

    {{!-- updating the balance sheet --}}
    <div class="modal" tabindex="-1" id="update">
        <div class="modal-dialog">
            <div class="modal-content">
                <h2>update</h2>
                <div class="modal-body">
                    <form id="form">
                        <div class="form-group">
                            <label for="item">ITEM NAME</label>
                            <input type="text" class="form-control" id="item" name="item" required />
                        </div>
                        <div class="form-group">
                            <label for="unit">UNIT</label>
                            <input type="text" class="form-control" id="unit" name="unit" required />
                        </div>
                        <div class="form-group">
                            <label for="price">PRICE</label>
                            <input type="number" min="0" step="0.01" class="form-control" id="price" name="price"
                                required />
                        </div>
                        <div class="form-group">
                            <label for="type">TYPE</label>
                            <select class="form-control" id="type" name="type" required>
                                <option>Fertilizer</option>
                                <option>Medicine</option>
                                <option>Others</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="company">COMPANY</label>
                            <input type="text" class="form-control" id="company" name="company" required />
                        </div>
                        <div class="form-group">
                            <label for="description">Description About the item(E.g Chemical composition)</label>
                            <textarea class="form-control" id="description" rows="3" name="description"
                                required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">update item</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" data-target="#update" id="openUpdate"></a>
    {{!-- end of updating the balance sheet --}}

    {{!-- response  --}}
    <div class="modal" tabindex="-1" id="balanceSuccess">
        <div class="modal-dialog">
            <div class="modal-content">
                <i class="fa fa-check text-success" id="success"></i>
                <div class="modal-body">
                    <p id="successMessage"></p>
                    <p>Click anywhere to close</p>
                </div>
                <div class="footer">
                    <button id="okSuccess" class="btn btn-primary" data-dismiss="modal" aria-label="Close">ok</button>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" data-target="#balanceSuccess" id="openSuccess"></a>
    <div class="modal" tabindex="-1" id="balanceWarning">
        <div class="modal-dialog">
            <div class="modal-content">
                <i class="fa fa-exclamation text-danger" id="warning"></i>
                <div class="modal-body">
                    <p id="warningMessage"></p>
                    <p>Click anywhere to close</p>
                </div>
                <div class="footer">
                    <button id="okWarning" class="btn btn-primary" data-dismiss="modal" aria-label="Close">ok</button>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" data-target="#balanceWarning" id="openWarning"></a>
    {{!-- end of response --}}

    {{#if balanceUpdate}}
    <div class="modal" tabindex="-1" id="updateMessage">
        <div class="modal-dialog">
            <div class="modal-content">
                <i class="fa fa-check text-{{alert}}" id="updateSuccess"></i>
                <div class="modal-body">
                    <p>{{balanceUpdate}}</p>
                </div>
                <div class="footer">
                    <button class="btn btn-primary" data-dismiss="modal" aria-label="Close">ok</button>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" data-target="#updateMessage" id="updateOpen"></a>
    {{/if}}

    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <h1>INCOME BALANCE</h1>
            </tr>
            <tr class="table">
                <th>#</th>
                <th scope="col">ITEM</th>
                <th scope="col">AMOUNT</th>
                <th scope="col">UNIT</th>
                <th scope="col">TYPE</th>
                <th scope="col">PRICE</th>
                <th scope="col">COMPANY</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tbody">
